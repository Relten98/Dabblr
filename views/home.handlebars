<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>
<div class="content">
    <div class="container-landing">

        <div class="row landing header-landing">
            <h1 class="display-1 text-center">Welcome to Dabblr.</h1>
            <h2 class="text-center">Choose a topic below:</h2>
            <div class="flex-row mt-1 text-center topics">
                {{#each children}}
                <a href='/topics/{{id}}'><button type="button" class="landing-btn my-1 mx-1"
                        data-TopicID="1">{{topicName}}</button></a>
                {{/each}}
            </div>
        </div>
    </div>
</div>
</div>
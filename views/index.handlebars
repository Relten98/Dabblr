<div class="container">
    <div class="row">
        <a href="{{parent.parentTopicID}}" data-parentTopicID={{parent.parentTopicID}}>
            <button type="button" class="mt-2 child">{{parent.topicName}}</button>
        </a>
    </div>
    <div class="row">
        <h1 class="mt-3 text-center header">{{header}}</h1>
    </div>
    <div class="flex-row d-flex mt-3 justify-content-between">
        <div class="d-flex flex-column col-6 me-3 all-articles">
            <div class="row main-article p-4">
                <div class="d-flex flex-row justify-content-between">
                    <h3 id="score">Score: {{mainArticle.votesSum}}</h3>
                    <div class="voting">
                        <button class="voting-btn"><i class="far fa-thumbs-up"></i></button>
                        <button class="voting-btn"><i class="far fa-thumbs-down"></i></button>
                    </div>
                </div>

                <div class="row">
                    <a href={{mainArticle.tutorialLink}} target="_blank" id="source"><button type="button"
                            id="source-btn">Source: {{mainArticle.tutorialLink}}</button></a>
                </div>
            </div>

            <div class="row">
                <h5 class="mt-3 px-0">Don't like these articles? Add a new one here:</h3>
                    <div class="input-group px-0">
                        <input type="text" class="form-control" placeholder="Add article url"
                            aria-label="submit-article" aria-describedby="submit-article" id="input-article"
                            data-tutorialType={{mainArticle.tutorialType}}
                            data-topicID={{mainArticle.fk_topicID}}
                            data-userID={{mainArticle.fk_userID}}>
                        <a href=""></a><button class="btn btn-outline-secondary" type="button" id="submit-article">Submit</button>
                    </div>
            </div>

            <div class="alt-articles">
                {{#each altArticles}}
                <div class="row">

                    <div class="alt-article mt-3 px-0">
                        <div class="d-flex flex-row justify-content-between mt-2 px-3">
                            <h4>Score: {{votesSum}}</h4>
                            <div class="voting">
                                <button class="alt-voting-btn"><i class="far fa-thumbs-up"></i></button>
                                <button class="alt-voting-btn"><i class="far fa-thumbs-down"></i></button>
                            </div>
                        </div>
                        <div class="row px-3 pb-2">
                            <a href={{tutorialLink}} target="_blank"><button type="button" class="alt-source-btn">Source:
                                    {{tutorialLink}}</button></a>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
        {{#if video_list}}
        <div class="all-videos col-6 ms-3">
            <div class="d-flex flex-column col-6 me-3">
                <iframe width="560" height="315" src={{href}} frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
                <div class="input-group mt-3">
                    <input type="text" class="form-control" placeholder="Add video url" aria-label="submit-article"
                        aria-describedby="submit-article" id="input-article">
                    <button class="btn btn-outline-secondary" type="button" id="submit-article">Submit</button>
                </div>
            </div>
        </div>
        {{else}}

        <p>No video provided!</p>

        {{/if}}
    </div>
    <div class="flex-row mt-3 mb-5">
        <div class="col-12 d-flex justify-content-around children">
            {{#each children}}
            <a href="{{id}}" data-parentTopicID={{parentTopicID}}>
                <button type="button" class="child">{{topicName}}</button>
            </a>
            {{/each}}
        </div>

    </div>
</div>
    </div>
    <div class="flex-row mt-3 mb-5">
        <div class="col-12 d-flex justify-content-around children">
            {{#each children}}
            <a href="{{id}}" data-parentTopicID={{parentTopicID}}>
                <button type="button" class="child">{{topicName}}</button>
            </a>
            {{/each}}
        </div>

    </div>
</div>